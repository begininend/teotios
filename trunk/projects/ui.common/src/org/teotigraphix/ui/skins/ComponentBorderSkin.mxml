<!--- 
* The default skinClass for the <code>ComponentBorder</code>.
* 
* <p><strong>Styles:</strong></p>
* <ul>
* <li>backgroundAlpha</li>
* <li>backgroundColor</li>
* <li>backgroundImage</li>
* <li>borderVisible</li>
* <li>borderAlpha</li>
* <li>borderColor</li>
* <li>borderWeight</li>
* <li>cornerRadius</li>
* <li>dropShadowVisible</li>
* </ul>
* 
* @author Michael Schmalle
* @copyright Teoti Graphix, LLC
* @productversion 1.0
* @source
-->
<tg:ComponentBorderSkinBase 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:mx="library://ns.adobe.com/flex/halo"
	xmlns:tg="org.teotigraphix.ui.skins.componentSupport.*"
	minWidth="0" minHeight="0" mouseEnabled="false">
	
	<fx:Metadata>
		[HostComponent("org.teotigraphix.ui.components.ComponentBorder")]
	</fx:Metadata>
	
	<!-- states -->
	<tg:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</tg:states>
	
	<!--- The Rect border element. -->
	<s:Rect id="border" 
			top="0" right="0" left="0" bottom="0">
	</s:Rect>
	
	<!--- The Rect background element. -->
	<s:Rect id="background"
			top="1" right="1" left="1" bottom="1">
	</s:Rect>
	
</tg:ComponentBorderSkinBase>