<!---
* An icon and label renderer for the <code>DataControl</code> component.
* 
* @author Michael Schmalle
* @copyright Teoti Graphix, LLC
* @productversion 1.0
* @source
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/halo"
		minWidth="10" minHeight="10">
	
	<fx:Metadata>
		[HostComponent("org.teotigraphix.ui.components.DataControl")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>
	
	<s:HGroup top="0" right="2" bottom="0" left="2" gap="0"
			  verticalAlign="middle">
		
		<!--- The skin part that displays the icon property. -->
		<s:BitmapImage id="iconDisplay"/>
		
		<!--- The skin part that displays the label property. -->
		<s:Label id="labelDisplay" 
				 fontWeight="bold"
				 maxDisplayedLines="1"/>
		
	</s:HGroup>
	
</s:Skin>