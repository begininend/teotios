<!--- 
 The default <code>closeButtonDisplay</code> for the <code>TitleBarSkin</code>.

 @author Michael Schmalle
 @copyright Teoti Graphix, LLC
 @productversion 1.0
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/halo">
	
	
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	
	<s:BitmapImage source.up="@Embed('/assets/skins/controlSupport/win_close_up.png')"/>
	<s:BitmapImage source.over="@Embed('/assets/skins/controlSupport/win_close_over.png')"/>
	<s:BitmapImage source.down="@Embed('/assets/skins/controlSupport/win_close_down.png')"/>
	<s:BitmapImage source.disabled="@Embed('/assets/skins/controlSupport/win_close_up.png')"/>
	
</s:Skin>
