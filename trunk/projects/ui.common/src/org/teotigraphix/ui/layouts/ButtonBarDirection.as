package org.teotigraphix.ui.layouts
{

/**
 * An enumerated class of ButtonBarLayout direction values 
 * <code>HORIZONTAL</code> and <code>VERTICAL</code>.
 * 
 * @author Michael Schmalle
 * @copyright Teoti Graphix, LLC
 * @productversion 1.0
 */
public final class ButtonBarDirection
{
	//--------------------------------------------------------------------------
	//
	// Public :: Constants
	//
	//--------------------------------------------------------------------------
	
	/**
	 * Constant that identifies the <strong>horizontal</strong> direction.
	 */
	public static const HORIZONTAL:String = "horizontal";
	
	/**
	 * Constant that identifies the <strong>vertical</strong> direction.
	 */
	public static const VERTICAL:String = "vertical";
}
}