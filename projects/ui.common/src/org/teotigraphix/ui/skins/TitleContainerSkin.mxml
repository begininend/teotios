<!---
* The default skin for the TitleContainer component.
* 
* @author Michael Schmalle
* @copyright Teoti Graphix, LLC
* @productversion 1.0
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/halo" 
		xmlns:tx="http://tx.teotigraphix.org/flex4"
		alpha.disabled="0.5" minWidth="131" minHeight="127">
	
	<fx:Metadata>
		[HostComponent("org.teotigraphix.ui.components.TitleContainer")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>
	
	<fx:Script>
		<![CDATA[
			
			/**
			 * @private
			 */
			override protected function updateDisplayList(unscaledWidth:Number, 
														  unscaledHeight:Number):void
			{
				super.updateDisplayList(unscaledWidth, unscaledHeight);
			}
			
		]]>
	</fx:Script>
	
	<tx:ComponentBorder id="border"
						skinClass="org.teotigraphix.ui.skins.ComponentBorderSkin"/>
	
	<s:VGroup horizontalAlign="contentJustify"
			  top="1" right="1" left="1" bottom="1"
			  gap="0" minWidth="0">
		
		<tx:TitleBar id="titleBarDisplay" minWidth="0"/>
		
		<s:Group id="contentGroup" height="100%"/>
		
	</s:VGroup>
	
</s:Skin>